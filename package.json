{
  "name": "coop-commerce-backend",
  "version": "1.0.0",
  "description": "Backend tools and Cloud Functions for Coop Commerce",
  "main": "functions/index.js",
  "scripts": {
    "load-test": "node scripts/load_test.js",
    "load-test:setup": "node scripts/setup_test_data.js",
    "load-test:cleanup": "node scripts/cleanup_test_data.js",
    "deploy-functions": "firebase deploy --only functions",
    "serve-functions": "firebase emulators:start --only functions",
    "serve-all": "firebase emulators:start",
    "logs": "firebase functions:log",
    "shell": "firebase functions:shell"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "@firebase/app": "^10.0.0",
    "@firebase/firestore": "^10.0.0"
  },
  "devDependencies": {
    "firebase-tools": "^13.0.0"
  },
  "engines": {
    "node": "18"
  }
}
